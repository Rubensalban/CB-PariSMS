                                android:tint="@color/purple_500" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/fin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_small"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyTextView_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:textSize="14sp"
                    android:text="Placez votre mise"
                    android:textColor="@color/grey_80" />

                <customfonts.EditText_Regular
                    android:id="@+id/match_mise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:background="@drawable/rectangle_edit"
                    android:hint="Montant minimum de 250FCFA"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:maxLength="7"
                    android:maxLines="1"
                    android:tag="250"
                    android:padding="4dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/grey_60" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_middle"
                android:layout_marginBottom="@dimen/spacing_small"
                android:gravity="center"
                android:orientation="horizontal">

                <customfonts.MyButton_Bold
                    android:id="@+id/btn_bet_validate_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/spacing_medium"
                    android:background="@color/purple_500"
                    android:text="Valider"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

                <customfonts.MyButton_Bold
                    android:id="@+id/btn_bet_cancel_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:background="@color/grey_900"
                    android:textSize="12sp"
                    android:text="Annuler"
                    android:textColor="@color/white" />
            </LinearLayout>

            <customfonts.MyTextView_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="9sp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="@string/les_paris_multiples"
                android:textAlignment="center"
                android:textColor="@color/grey_80" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>